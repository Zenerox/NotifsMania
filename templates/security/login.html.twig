{% extends 'base.html.twig' %}

{% block title %}Identification{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-error rounded mb-3" role="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Identification</h1>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
    </div>
    <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" name="password" id="password" class="form-control" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <button class="btn btn-lg btn-primary btn-block" type="submit">
        M'identifier
    </button>
    <p class="text-center text-muted">
        Pas encore enregistré(e)? <a href="{{ path('app_register_choice') }}">Je crée un compte</a>
    </p>
</form>
{% endblock %}
